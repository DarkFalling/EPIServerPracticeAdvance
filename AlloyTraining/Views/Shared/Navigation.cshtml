@using EPiServer
@using EPiServer.Core
@using EPiServer.ServiceLocation
@using EPiServer.Web
@using AlloyTraining.Helpers
@using AlloyTraining.Business

<div class="alloyMenu">
    <div class="navbar">
        <div class="navbar-inner">
            <div class="container">
                <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </a>
                <div class="nav-collapse">
                    <ul class="nav">
                        <li class="@(Model.CurrentPage.ContentLink.CompareToIgnoreWorkID(SiteDefinition.Current.StartPage) ? "active" : null)">
                            @Html.PageLink(SiteDefinition.Current.StartPage.ToPageReference())
                        </li>
                        @Html.MenuList(SiteDefinition.Current.StartPage,
                        @<li class="@(item.Selected ? "active" : null)">
                            @Html.PageLink(item.Page)
                        </li>)
                    </ul>
                    <div class="navbar-search pull-right">
                        @using (Html.BeginForm(null, null, FormMethod.Post, new { @action = ServiceLocator.Current.GetInstance<IContentLoader>().Get<AlloyTraining.Models.Pages.StartPage>(SiteDefinition.Current.StartPage).SearchPageLink.ExternalURLFromReference() }))
                        {
                            <input type="text" class="search-query" name="q" id="SearchKeywords" placeholder="Search" />
                            <input type="submit" class="searchButton" id="SearchButton" value="" />
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>